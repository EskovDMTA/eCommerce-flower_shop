{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/assets/images/*.svg",
    "./src/assets/images/*.png"
  ]
}
